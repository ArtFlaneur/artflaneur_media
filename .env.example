# Public Environment Variables (accessible in browser)
# These start with VITE_ and will be bundled into the client JavaScript

# Sanity CMS
VITE_SANITY_PROJECT_ID=your_project_id
VITE_SANITY_DATASET=production
VITE_SANITY_API_VERSION=2024-01-01

# Supabase (anon key is safe for client-side)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key

# GraphQL Proxy URL (points to serverless function)
VITE_API_PROXY_URL=/api/graphql
VITE_GRAPHQL_TENANT_ID=artflaneur

# Private Environment Variables (server-only, NOT prefixed with VITE_)
# These should ONLY be set in Vercel Dashboard â†’ Environment Variables

# GraphQL API (keep these secret!)
GRAPHQL_ENDPOINT=https://your-graphql-endpoint.com/graphql
GRAPHQL_API_KEY=your_secret_api_key
